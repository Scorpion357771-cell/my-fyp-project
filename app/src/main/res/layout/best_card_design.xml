<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/best_doctor_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/doc1"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/best_doctor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Shabana"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/baloo_regular"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/best_doctor_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is Lorem Ipsum Lorem Ipsum is simply dummy text"

            />


    </LinearLayout>



</androidx.cardview.widget.CardView>