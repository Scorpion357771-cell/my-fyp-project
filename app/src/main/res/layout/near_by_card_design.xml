<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">
<!--    23465323-->


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:padding="10dp"
       >

        <ImageView
            android:id="@+id/nearby_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/doc4"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/nearby_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor xx"
            android:layout_toRightOf="@id/nearby_image"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/baloo_regular"/>

        <RatingBar
            android:id="@+id/mv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/nearby_title"
            android:layout_marginLeft="110dp"
            android:rating="4.5"/>

        <TextView
            android:id="@+id/nearby_desc"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_below="@id/mv_rating"
            android:layout_toRightOf="@id/nearby_image"
            android:padding="10dp"
            android:text="Lorem Ipsum is simply dummy text of the printing......" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>